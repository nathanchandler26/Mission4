@{
    ViewData["Title"] = "Add a Movie";
}

@model Mission4.Models.MovieResponse
    
<div>
    <form method="post">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            <option value="">Select a category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryTitle</option>
            }
        </select><br />

        <label asp-for="Title"></label>
        <input asp-for="Title" /><br />

        <label asp-for="Year"></label>
        <input asp-for="Year" /><br />

        <label asp-for="Director"></label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating"></label>
        <select asp-for="Rating">
            <option value="">Select the movie rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />
        @*This will create a drop down menu to select which rating*@

        <label asp-for="Edited"></label>
        <select asp-for="Edited"> 
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />
        @*This will create a drop down menu to select yes or no for being edited*@

        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes"></label>
        <input asp-for="Notes" /><br /> 

        <button type="submit">Add Movie</button>
        <div asp-validation-summary="All"></div>
    </form>
</div>